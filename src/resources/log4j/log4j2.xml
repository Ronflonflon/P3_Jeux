<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
  <Appenders>
    <File name="FileLogger" fileName="game.log" append="false"> 
      <PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%t/%level]: %logger{0} - %msg%n"/> 
    </File>
  </Appenders>
  <Loggers>
    <Root level="trace">
  	 <AppenderRef ref = "FileLogger" />
    </Root>
  </Loggers> 
</Configuration>